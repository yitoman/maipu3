body
	background-color $bgColor
	height 100%
	width 100%
	margin 0
	padding 0
	overflow hidden
#wrapper
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	overflow hidden
	// @media screen and (orientation: landscape)
#mask
	width 500%
	height 100%
.item
	width 20%
	height 100%
	float left
	position relative
.item-detalle,
.detail-individual
	background-color $bgColor
	width 100%
	height 100%
	position absolute
	left 0
	top 0
	display none
	ul.striped
		li
			font-size 5vw
			padding 5px 20px
			word-break break-word
			@media screen and (min-width: 640px)
				font-size 3vw
			&:nth-child(even)
				background #D9D8D8
				color #868585
			&:nth-child(odd)
				background #ECECEB
				color #6E6E6E
.content
	width 100%
	height calc(100% - 9.5% - 60px)
	top 0px
	margin 0 auto
	position relative
	overflow-y scroll
	overflow-x hidden
.content-fix
	height calc(100% - 9.5%)
	top 0
.contain
	height 100%
	width 100%
.panel
	background none

img
	max-width 100%
	width 100%
img.preload
	width 50px
	height 50px
h2
	color $primaryColor
	font-size 5vw
	font-weight normal
	line-height 120%
	padding 5px 20px
#header
	width 100%
	img
		width 100%
#landing
	position absolute
	left 0
	top 0
	z-index 100
	img
		height 100%
		width 100%
.row-menu
	margin 10px 0
.home-icon
	p
		color $primaryColor
		display block
		font-size 3.5vw
		line-height 120%
		margin 0 0 10px 0
		@media screen and (min-width: 640px)
			font-size 2.2vw
	img
		height 75%
		width 75%
		max-width 100px
		margin-bottom 8px
	&:hover,
	&:active
		text-decoration none
#footer
	background-color white
	height 9.5%
	padding 5px 15px
	position absolute
	left 0
	bottom 0
	width 100%
	.home-icon img
		margin-top 5px
		max-width 75px		
.top-section
	background-color #e9550d
	color white
	height 60px
	padding 20px 10px 10px
	text-transform uppercase
	.back
		background url("../img/funcional-icons/flecha-blanca.png") no-repeat center center
		background-size cover
		display inline-block
		height 30px
		width 15px
		margin-right 10px
		vertical-align baseline
	&>span
		font-size 5.5vw		
		line-height 140%
		letter-spacing -1px
		left 12%
		position absolute
		text-align center
		width 75%
	.head-icon,
	.search-icon
		display inline-block
		height 20px
		margin-right 3px
		vertical-align middle
		width 20px
	.search-icon
		height 30px
		margin-right 0
		width 30px
	@media screen and (min-width: 640px)
		height 80px
		span
			font-size 4.5vw
		.head-icon
			height 30px
			width 30px
		.search-icon
			height 40px
			width 40px
		.back
			height 40px
			width 20px
		
.phone
	background url("../img/icons/icon-phone-b.png") no-repeat center center
	background-size cover
.centros
	background url("../img/icons/centros-salud-b.png") no-repeat center center
	background-size cover
.eventos
	background url("../img/icons/eventos-culturales-b.png") no-repeat center center
	background-size cover
.alcalde
	background url("../img/icons/alcalde-b.png") no-repeat center center
	background-size cover
.tramites
	background url("../img/icons/tramites-b.png") no-repeat center center
	background-size cover
.reclamos
	background url("../img/icons/reclamos-b.png") no-repeat center center
	background-size cover
.codeduc
	background url("../img/icons/centros-educacion-b.png") no-repeat center center
	background-size cover
.aguas
	background url("../img/icons/smapa-b.png") no-repeat center center
	background-size cover
.search
	background url("../img/funcional-icons/search-icon.png") no-repeat center center
	background-size cover
.gray-list
	margin 0
	padding 0
	li
		background $gris
		min-height 60px
		margin 1% 0
		text-transform uppercase
		a
			color $primaryColor
			display block
			font-size 6vw
			padding 10px 8%
			@media screen and (min-width: 640px)
				font-size 2.8vw
			span
				display inline-block
				margin-top 3%
				width 80%
				@media screen and (min-width: 640px)
					margin-top 1%
	.icon-list
		float right
		margin-top: -5px
		max-width 60px
		width 20%
.slide-title
	background #D9D8D8
	padding 5px 20px
	font-size 5.1vw
	@media screen and (min-width: 640px)
		font-size 3vw
.collapse-list
	background white
	li
		color #868585
		font-weight bold
		margin 2px 0
		.collapse
			li
				background #ECECEB
				font-size 4.5vw
				margin 3px 0
				min-height 30px
				padding 5px 20px
				@media screen and (min-width: 640px)
					font-size 2.5vw
				a
					color $primaryColor
					font-size 1.2em
					font-weight normal
					span
						vertical-align middle
						width 85%
						display inline-block
				img
					display inline-block
					height 50%
					max-height 30px
					width 50%
					max-width 30px
					vertical-align middle
				&.destacado-gris
					padding 0
					>.row
						border-bottom #CECECE 2px solid
						div:nth-child(even)
							padding-left 0
							span
								display block
								padding 20px 20px 20px 0
						div:nth-child(odd)
							padding-right 0
							span
								display block
								padding 20px 0 20px 20px
					>div:first-child
						background #CECECE
						color #666
						font-weight 400
						padding 10px 20px
						text-transform uppercase
					a
						color #868585
.collapse-title
	background #ECECEB
	border-bottom #C4C4C4 5px solid
	color #868585
	display block
	padding 10px 20px
	text-align center
	strong
		font-size 5vw
		font-weight 600
	p
		margin 5px 0 10px 0
		line-height 120%
.section-title
	background #D9D8D8
	color #868585
	font-size 5.4vw
	font-weight 500
	padding 4px 20px
	&.min-description
		height 55px
		overflow hidden
	@media screen and (min-width: 640px)
		font-size 3.5vw
		&.min-description
			height 87px
			padding 5px 12% 5px 6%
.section-description
	color #8A8A8A
	font-size 5vw
	line-height 120%
	padding 10px 20px
	@media screen and (min-width: 640px)
		font-size 3vw
.orange-list
	.slide-title
		color $primaryColor
		display table
		font-weight 400
		font-size 5vw
		padding-top 5px
		padding-bottom 5px
		text-transform uppercase
		width 100%
		span
			margin 7px 0
			display inline-block
		@media screen and (min-width: 640px)
			font-size 3vw
.list-arrow
	li
		&>a
			background url("../img/funcional-icons/flecha-naranja.png") no-repeat 94% center
			background-size 14px
			display block
			font-size 4.5vw
			padding 5px 12% 5px 6%
			text-transform uppercase
			@media screen and (min-width: 640px)
				font-size 3vw
		a
			color #002B10
			font-weight normal
	&.mini
		li
			a
				font-size 1.1em!important
				text-transform inherit
.list-generic
	li
		color #6E6E6E
		padding 5px 15px
		a
			color #6E6E6E
		span
			float left
			font-weight 300
			margin-right 5px
		strong
			display flex
			word-break break-word
.call-it
	&:before,
	&.mini:before
		content ""
		background url("../img/icons/tel-emergencia/back-telefono.png") 0 0 no-repeat
		background-size contain
		display inline-block
		height 20px
		margin-right 5px
		width 20px
		vertical-align sub
	&.mini:before
		height 15px
		width 15px
		vertical-align middle
.location-link
	color #6E6E6E
	&:before
		content ""
		background url("../img/funcional-icons/icon-location.png") 0 0 no-repeat
		background-size contain
		display inline-block
		height 20px
		margin-right 5px
		width 20px
		vertical-align text-bottom
.iconos
	float right
	height 13%
	max-width 60px
	width 13%
.maxi-iconos
	max-width 50px!important
	max-height 50px!important
.mini-iconos
	max-width 25px!important
	max-height 25px!important
	margin 1.5% 0
.wrap-search-box
	background $bgColor
	box-shadow 0px 8px 20px rgba(0,0,0,.5)
	padding 15px 20px
	z-index 99
.bg-white
	font-size 4.5vw
	@media screen and (min-width: 640px)
		font-size 3.5vw
